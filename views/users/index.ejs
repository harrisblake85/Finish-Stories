<!DOCTYPE html>
<html>
<head>
  <% include ../partials/head.ejs %>
</head>
<body>
  <% include ../partials/user.ejs %>

  <%if (currentuser) {%>
    <%if (currentuser.admin ===true) {%>
      <a href="/users/deleteall"><button>Delete All</button></a>
    <%}%>
  <%}%>

  <br>

    <%# for loop%>
    <div class="indexdiv">
    <%# for loop%>
    <%for (let i of users) { %>
      <div class="indexitem">
      <a class="indexa" href="/users/<%=i.id%>">
      <button class="indexbutton" >
      <h2><%=i.username||"No User"%></h2>
      <img class="indeximg" src= "<%=i.url %>" onerror="this.src = 'https://upload.wikimedia.org/wikipedia/commons/a/ac/No_image_available.svg';"/>
      <p>Posts: <%=i.posts%></p>
      </button>
      </a>
      </div>
      <%}%>
      <%# end index div%>
      </div>


    <% include ../partials/footer.ejs %>
    </body>
    </html>
