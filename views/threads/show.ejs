<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <a href="/threads/">
      <button>Go To Threads</button></a>
    <br>
    <%if (currentuser) {%>
      <p>Currently Viewing: <%=currentuser.username%></p>
      <%if (currentuser.id==oneThread.user) {%>
        <div class="access">
        <a href="/threads/<%=oneThread.id%>/edit">
          <button>Edit Thread</button></a>
        <form class= "" action="/threads/<%= oneThread.id %>?_method=DELETE" method="POST">
          <input type="submit" value="Delete Thread" />
        </form>
      </div>
      <%}%>
    <%}%>


    <img src='<%= oneThread.url %>' />
    <p>Thread Started By: <%=startuser.username%></p>
    <p>Title: <%=oneThread.title%></p>
    <p><%=oneThread.start%></p>
    <%let lastuser = oneThread.user;%>
    <% for (let piece of pieces) { %>
      <img src="<%=piece.url%>">
      <p><%=piece.content%></p>
      <%lastuser = piece.user;%>
      <% } %>
      <%if (currentuser) {%>
        <%if (currentuser.id!=lastuser) {%>
          <h3>Add To The Story!</h3>
          <form action='/pieces' method='post'>
          Story Content:<input type='text' name='content' placeholder='content' />
          Image Url:<input type='text' name='url' value='https://images.unsplash.com/photo-1466951477635-f802dbe34af9?dpr=1&auto=format&fit=crop&w=376&h=251&q=60&cs=tinysrgb&ixid=dW5zcGxhc2guY29tOzs7Ozs%3D' />
          <input type='hidden' name='thread' value='<%= oneThread._id %>' />
          <input type='hidden' name='user' value='<%= currentuser.id %>' />
          <input type='hidden' name='respondto' value='<%= lastuser %>' />
          <input type='submit' />
          </form>
          <% } else{ %>
            <h3>You were the last one to respond to the thread.</h1>
            <% } %>
            <%}%>


  </body>
</html>
